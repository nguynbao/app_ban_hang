<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Thêm sản phẩn"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" >

        <EditText
            android:id="@+id/edt_cateID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/edt_underline"
            android:hint="Danh mục sản phẩm"
            android:textColor="@color/black"
            android:padding="15dp"
            android:inputType="number"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/edt_productName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:hint="Tên sản phẩm"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@drawable/edt_underline" />

        <EditText
            android:id="@+id/edt_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:hint="Giá tiền"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@drawable/edt_underline" />

        <ImageButton
            android:id="@+id/btn_imgRes"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/edt_round_pre"
            android:backgroundTint="@color/gray"/>

        <EditText
            android:id="@+id/edt_Desc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:hint="Mô tả"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:background="@drawable/edt_underline" />

        <Button
            android:id="@+id/btn_addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:backgroundTint="@color/primary"
            android:layout_gravity="center"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>